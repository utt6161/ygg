model Player {
  id        Int     @id @default(autoincrement())
  patreonId String
  name      String
  uuid      String
  createdAt Int     @default(dbgenerated("(strftime('%s','now'))"))
  tokens    Token[]
}

model Token {
  id          Int    @id @default(autoincrement())
  clientToken String
  accessToken String
  createdAt   Int    @default(dbgenerated("(strftime('%s','now'))"))
  player      Player @relation(fields: [playerId], references: [id])
  playerId    Int
}

model Pending {
  id          Int    @id @default(autoincrement())
  clientToken String
  accessToken String
  createdAt   Int    @default(dbgenerated("(strftime('%s','now'))"))
}

model Whitelist {
  id        Int    @id @default(autoincrement())
  patreonId String
  createdAt Int    @default(dbgenerated("(strftime('%s','now'))"))
}
